{
  "name": "ai-standup-backend",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "node start-dev.js",
    "dev:api": "API_PORT=${API_PORT:-3001} npx serverless offline --config serverless.api.yml",
    "dev:summarizer": "SUMMARIZER_PORT=${SUMMARIZER_PORT:-3002} npx serverless offline --config serverless.summarizer.yml",
    "dev:notifier": "NOTIFIER_PORT=${NOTIFIER_PORT:-3003} npx serverless offline --config serverless.notifier.yml",
    "build": "tsc -p tsconfig.json",
    "test": "jest"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.7.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-graphql": "^0.12.0",
    "graphql": "^16.8.1",
    "mongoose": "^8.4.0",
    "mysql2": "^3.9.7",
    "serverless-http": "^3.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "serverless": "^3.39.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-offline": "^13.8.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
